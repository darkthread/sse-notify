@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
</head>
<body style="text-align: center">
    <img src="@ViewBag.QRCodePng" alt="QR Code" />
    <div>
        Timout: <span id="t">@ViewBag.TimeoutSecs</span>s
    </div>
    <div>
        <button onclick="simulate()">Simulate Scan QR Code</button>
    </div>
    <script>
        function simulate() {
            var url = '@ViewBag.Url';
            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded'
                },
                body: [
                    'message=' + encodeURIComponent('Scanned')
                ].join('&')
            });
        }
        var timeout = @ViewBag.TimeoutSecs;
        var h = setInterval(function () {
            timeout--;
            document.getElementById('t').innerText = timeout;
            if (timeout == 0) clearInterval(h);
        }, 1000);
    </script>
</body>
</html>
